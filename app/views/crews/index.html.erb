<h1>Listing All Crews</h1>

<table class="alternating_rows">
  <tr>
    <th>Abbrev.</th>
    <th>Name</th>
    <th>Dandy Info Status</th>
    <th>Charge Code</th>
  </tr>
<% @crews.each do |crew| %>
  <tr class="odd">
    <td><%= link_to crew.abbreviation, crew_path(crew) %></td>
    <td><%= link_to crew.name, crew_path(crew) %></td>
    <td><%= crew.info_complete? ? "Complete!" : "-" %></td>
    <td style="text-transform: uppercase;"><%= crew.charge_code %> / <%= crew.override %></td>
  </tr>
<% end %>
</table>
<br />
| <%= link_to "Home", crew_path(current_user.crew_id) %> |
<% if current_user.is_admin? %>
 <%= link_to "New Crew", new_crew_path %> |
<% end %>