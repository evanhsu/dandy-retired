<h1>Listing users</h1>
<hr />
<div class="notice"><%= flash[:notice] %></div>

<table>
  <tr>
    <th>Username</th>
    <th>Account Type</th>
    <th>Crew ID</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.account_type %></td>
    <td><%= user.crew_id %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

